{
  "manifest_version": 3,
  "name": "DoganayLab API Translate App",
  "version": "3.0.0",
  "description": "Translate web pages using OpenRouter API with support for multiple AI models",
  "icons": {
    "19": "icons/translate-19.png",
    "38": "icons/translate-38.png",
    "48": "icons/translate-48.png",
    "96": "icons/translate-96.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "clipboardRead",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "19": "icons/translate-19.png",
      "38": "icons/translate-38.png"
    },
    "default_title": "DoganayLab API Translate App",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "translate-page": {
      "suggested_key": {
        "default": "Alt+W"
      },
      "description": "Translate Page"
    },
    "translate-clipboard": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Translate Clipboard Content"
    },
    "translate-selection": {
      "suggested_key": {
        "default": "Alt+Y",
        "mac": "Alt+Y"
      },
      "description": "Translate selected text in popup"
    }
  }
}
